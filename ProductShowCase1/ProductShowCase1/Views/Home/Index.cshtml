    <div class="row">
        @foreach (var u in Model.Kategoriler)
        {
            // Belirli CategoryID'leri kontrol edin
            if (u.CategoryID == 1)
            {
                <div class="col-12 col-md-4 p-5 mt-3">
                    <a href="@Url.Action("ProductList","Home", new {id = u.CategoryID})">
                        <img src="~/ProductCSS/assets/img/3görsel.png" class="rounded-circle img-fluid border">
                    </a>
                    <h5 class="text-center mt-3 mb-3">@u.CategoryName</h5>
