@model ProductShowCase1.Models.Classes.Product
@{
    ViewBag.Title = "ProductAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Ürün Sayfası</h2>
<br />
@using (Html.BeginForm("ProductAdd","Product", FormMethod.Post, new {enctype = "multipart/form-data" })) { 
<form class="form-group" method="post">
    @Html.LabelFor(x => x.ProductName)
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Brand)
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Stock)
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PurchasePrice)
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SalePrice)
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ProductFeature)
    @Html.TextBoxFor(x => x.ProductFeature, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Category)
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vle1, new { @class = "form-control" })
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage)
    <input type="file" name="ProductImage" />
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage2)
    <input type="file" name="ProductImage2" />
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage3)
    <input type="file" name="ProductImage3" />
    @Html.Display("ProductImage3")
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage4)
    <input type="file" name="ProductImage4" />
    <br />
    <br />
    @Html.LabelFor(x => x.Status)
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
}
