@model ProductShowCase1.Models.Classes.Product
@{
    ViewBag.Title = "ProductBring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Ürün Güncelleme</h2>
<br />

@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(x => x.ProductID)
    @Html.LabelFor(x => x.ProductName)
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Brand)
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Stock)
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PurchasePrice)
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SalePrice)
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ProductFeature)
    @Html.TextBoxFor(x => x.ProductFeature, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Category.CategoryID)
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vle1, new { @class = "form-control" })
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage)
    <img src="@Model.ProductImage" />
    <input hidden type="text" id="ProductImage" name="ProductImage" value="@Model.ProductImage" />
    <input type="file" class="form-control" id="ProductImage" name="ProductImage"/>
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage2)
    <img src="@Model.ProductImage2" />
    <input hidden type="text" id="ProductImage2" name="ProductImage2" value="@Model.ProductImage2" />
    <input type="file" class="form-control" id="ProductImage2" name="ProductImage2" />
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage3)
    <img src="@Model.ProductImage3" />
    <input hidden type="text" id="ProductImage3" name="ProductImage3" value="@Model.ProductImage3" />
    <input type="file" class="form-control" id="ProductImage3" name="ProductImage3"/>
    <br />
    <br />
    @Html.LabelFor(x => x.ProductImage4)
    <img src="@Model.ProductImage4" />
    <input hidden type="text" id="ProductImage4" name="ProductImage4" value="@Model.ProductImage4" />
    <input type="file" class="form-control" id="ProductImage4" name="ProductImage4"/>
    <br />
    <br />
    @Html.LabelFor(x => x.Status)
    <input class="form-control" id="Status" name="Status" type="text" value="True" />
    <br />
    <button class="btn btn-warning">Güncelle</button>
}

