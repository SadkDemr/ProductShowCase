@using ProductShowCase1.Models.Classes
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach(var k in Model)
            {
<tr>
    <td>
        @k.CategoryID
    </td>
    <td>
        @k.CategoryName
    </td>
    <td><a href="/Category/CategoryBring/@k.CategoryID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Category/CategoryRemove/@k.CategoryID" class="btn btn-danger">Sil</a></td>
</tr>
            }


</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">Kategori Ekle</a> 

